<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="android:calendarViewStyle">@style/CustomCalendarViewStyle</item>
    </style>

    <style name="CustomDateTextAppearance" >
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CustomCalendarViewStyle" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="android:datePickerMode">calendar</item> <!-- Set the date picker mode to calendar -->
        <item name="android:calendarViewShown">true</item> <!-- Show the calendar view -->
        <item name="android:spinnersShown">false</item> <!-- Hide the spinners (month and year selection) -->
        <item name="android:shownWeekCount">1</item> <!-- Set the number of visible weeks to 1 -->
    </style>
</resources>